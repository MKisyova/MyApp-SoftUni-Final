@model BookstoreApp.Web.ViewModels.Genres.AllGenresViewModel
@{
	this.ViewData["Title"] = "All genres";
}

<h3 class="title text-dark">@this.ViewData["Title"]</h3>
<hr />
<div class="row">
	@for (int i = 0; i < this.Model.Genres.Count(); i++)
	{
		var genre = Model.Genres.ToArray()[i];
		var bookClass = "fas fa-book";

		if (i % 2 == 0)
		{
			bookClass = "fas fa-book-open";
		}
		else if (i % 3 == 0)
		{
			bookClass = "fas fa-book-reader";
		}
		<div class="col-md-3 mb-2">
			<a asp-action="BooksByGenre" asp-route-id="@genre.Id"><i class="@bookClass"></i> @genre.Name</a>
		</div>
	}
</div>
