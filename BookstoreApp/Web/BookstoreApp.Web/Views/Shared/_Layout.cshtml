@using BookstoreApp.Common
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@this.ViewData["Title"] - @GlobalConstants.SystemName</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/lib/fontawesome/css/all.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/mdb.min.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-light border-bottom box-shadow mb-1 cadet-blue-color">
			<div class="container">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">@GlobalConstants.SystemName</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						@if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
						{

							<li class="nav-item dropdown">
								<a class="nav-link text-dark dropdown-toggle" data-bs-toggle="dropdown"><i class="fas fa-book-open"></i> Books settings</a>
								<ul class="dropdown-menu">
									<li>
										<a class="dropdown-item text-dark" asp-area="Administration" asp-controller="Books" asp-action="All">All books</a>
									</li>
									<li>
										<a class="dropdown-item text-dark" asp-area="Administration" asp-controller="Books" asp-action="Create">Create book</a>
									</li>
								</ul>
							</li>

							<li class="nav-item dropdown">
								<a class="nav-link text-dark dropdown-toggle" data-bs-toggle="dropdown"><i class="fas fa-user-secret"></i> Authors settings</a>
								<ul class="dropdown-menu">
									<li>
										<a class="dropdown-item text-dark" asp-area="Administration" asp-controller="Authors" asp-action="All">All authors</a>
									</li>
									<li>
										<a class="dropdown-item text-dark" asp-area="Administration" asp-controller="Authors" asp-action="Create">Create author</a>
									</li>
								</ul>
							</li>

							<li class="nav-item dropdown">
								<a class="nav-link text-dark dropdown-toggle" data-bs-toggle="dropdown"><i class="fas fa-bookmark"></i> Genres settings</a>
								<ul class="dropdown-menu">
									<li>
										<a class="dropdown-item text-dark" asp-area="Administration" asp-controller="Genres" asp-action="All">All genres</a>
									</li>
									<li>
										<a class="dropdown-item text-dark" asp-area="Administration" asp-controller="Genres" asp-action="Create">Create genre</a>
									</li>
								</ul>
							</li>
						}
					</ul>
					<partial name="_LoginPartial" />
				</div>
			</div>
		</nav>
	</header>

	<header>
		<nav class="navbar navbar-expand-sm navbar-light border-bottom box-shadow mb-3">
			<div class="container">
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Search" asp-action="Index">Search</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Books" asp-action="All">Books</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Genres" asp-action="All">Categories</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Authors" asp-action="All">Authors</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Books" asp-action="Bestsellers">Bestsellers</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Books" asp-action="NewBooks">New Books</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Books" asp-action="TopRated">Top Rated</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Genres" asp-action="Fiction">Fiction</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Genres" asp-action="Nonfiction">Nonfiction</a>
						</li>
					</ul>
					@if (this.User.Identity.IsAuthenticated)
					{						
						<a class="nav-link text-dark float-end" asp-area="" asp-controller="ShoppingCart" asp-action="Details">
							Cart <i class="fas fa-shopping-basket"></i>
						</a>						
					}
				</div>
			</div>
		</nav>
	</header>

	<div class="container">
		<partial name="_CookieConsentPartial" />
		<main role="main" class="pb-3">
			@this.RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; @DateTime.Now.Year - @GlobalConstants.SystemName - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
	<script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
	<script src="~/js/site.min.js" asp-append-version="true"></script>
	@await this.RenderSectionAsync("Scripts", required: false)
</body>
</html>
