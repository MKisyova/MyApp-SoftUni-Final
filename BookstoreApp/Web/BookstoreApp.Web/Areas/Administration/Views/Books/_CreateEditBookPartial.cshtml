@model BookstoreApp.Web.ViewModels.Administration.Books.BaseBookInputModel
@{
	var authors = this.Model.Authors.Select(x => new SelectListItem(x.Value, x.Key));
	var genres = this.Model.Genres.Select(x => new SelectListItem(x.Value, x.Key));
}

<div class="form-group mb-3">
	<label asp-for="Title"></label>
	<input asp-for="Title" class="form-control" />
	<span asp-validation-for="Title" class="text-danger"></span>
</div>
<div class="form-group mb-3">
	<label asp-for="Description"></label>
	<textarea asp-for="Description" class="form-control" rows="5"></textarea>
	<span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="form-group mb-3">
	<label asp-for="Pages"></label>
	<input asp-for="Pages" class="form-control" />
	<span asp-validation-for="Pages" class="text-danger"></span>
</div>
<div class="form-group mb-3">
	<label asp-for="Price"></label>
	<input asp-for="Price" class="form-control" />
	<span asp-validation-for="Price" class="text-danger"></span>
</div>
<div class="form-group mb-3">
	<label asp-for="YearPublished"></label>
	<input asp-for="YearPublished" class="form-control" />
	<span asp-validation-for="YearPublished" class="text-danger"></span>
</div>
<div class="form-group mb-3">
	<label asp-for="AuthorId"></label>
	<select asp-for="AuthorId" class="form-control form-select" asp-items="authors">
		<option selected>-- Choose author --</option>
	</select>
	@*<select asp-for="AuthorId" class="form-control" asp-items="authors" id = "myDropdown"></select>*@
	<span asp-validation-for="AuthorId" class="text-danger"></span>
</div>
<div class="form-group mb-3">
	<label asp-for="GenreIds"></label>
	<select asp-for="GenreIds" class="form-control" asp-items="genres" multiple>
		<option selected>-- Choose genres(for multiple genres press and hold CTRL) --</option>
	</select>
	<span asp-validation-for="GenreIds" class="text-danger"></span>
</div>
<div class="form-group mb-3">
	<label asp-for="Image"></label>
	<input asp-for="Image" class="form-control" />
	<span asp-validation-for="Image" class="text-danger"></span>
</div>