@model BookstoreApp.Web.ViewModels.Administration.Authors.BaseAuthorInputModel
@{
	var genres = this.Model.Genres.Select(x => new SelectListItem(x.Value, x.Key));
}

<div class="form-group mb-3">
	<label asp-for="Name"></label>
	<input asp-for="Name" class="form-control" />
	<span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group mb-3">
	<label asp-for="ShortBiography"></label>
	<textarea asp-for="ShortBiography" class="form-control" rows="5"></textarea>
	<span asp-validation-for="ShortBiography" class="text-danger"></span>
</div>
<div class="form-group mb-3">
	<label asp-for="GenreIds"></label>
	<select asp-for="GenreIds" class="form-control" asp-items="genres" multiple></select>
	<span asp-validation-for="GenreIds" class="text-danger"></span>
</div>
